<h1>Eat-da-Burger!</h1>

<!-- Add a burger -->
<div class="row">
        <div class="col s12 m6 l3">
            <form action="/" class="create-form" method="POST">
                <div class="form-group">
                    <label for="burg">
                        Burger:
                    </label>
                    <input id="burg" name="burger" type="text">
                    </input>
                </div>
                <button class="btn" type="submit">
                    Add Burger
                </button>
            </form>
        </div>
    </div>
</div>
    
    <div class="row">
        <div class="col s12 m6 l5">
            <ul class="collection">
                <div class="not-devoured-group">
                </div>
            </ul>
        </div>

        
        <div class="col s12 m6 l5 offset-l2">
            <ul class="collection">
                <div class="devoured-group">
                </div>
            </ul>
        </div>
    </div>


    
{{#each burgers}}
	{{#if devoured}}
<li class="collection-item devoured">
    <input name="id" type="hidden" value="{{this.id}}">
        <span name="burger-name">
        </span>
        {{this.burger_name}}
    </input>
</li>
{{else}}
<li class="collection-item not-devoured">
    <form action="/?_method=PUT" class="create-update-form" method="POST">
        <input name="id" type="hidden" value="{{this.id}}">
            <div class="row center-vert">
                <div class="col s6">
                    <p>
                        <span name="burger-name">
                        </span>
                        {{this.burger_name}}
                    </p>
                </div>
                <div class="col s6 submit-parent">
                    <button class="secondary-content waves-effect waves-light btn" type="submit">
                        Devour!
                    </button>
                </div>
            </div>
        </input>
    </form>
</li>
{{/if}}
{{/each}}
<script>
    $(".devoured").appendTo($(".devoured-group"));
	$(".not-devoured").appendTo($(".not-devoured-group"));
</script>
